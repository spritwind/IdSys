@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.Duende.IdentityServer.STS.Identity.Configuration.Interfaces
@using Skoruba.Duende.IdentityServer.STS.Identity.Helpers.Localization
@inject IViewLocalizer Localizer
@model Skoruba.Duende.IdentityServer.STS.Identity.ViewModels.Account.LoginViewModel
@inject IRootConfiguration RootConfiguration

<div class="login-bg-mesh"></div>

<div class="login-split-wrapper">
    <!-- Left Column: Brand Art -->
    <div class="login-brand-col">
        <div class="brand-art-content">
            <h1 class="brand-art-title">歡迎回到 <br> <span style="color: var(--accent-gold);">UC Capital</span></h1>
            <p class="brand-art-desc">
                為您的組織提供安全、高效且可靠的身分管理服務。
                安心存取您的儀表板，輕鬆管理您的數位資產。
            </p>
        </div>
    </div>

    <!-- Right Column: Login Form -->
    <div class="login-form-col">
        <div class="text-center mb-5">
            <h2 class="h3 font-weight-bold">Sign In</h2>
            <p class="text-muted">Enter your credentials to access the account</p>
        </div>

        @await Html.PartialAsync("_ValidationSummary")

        <!-- External Providers (Google) - Prioritized Display -->
        @if (Model.VisibleExternalProviders.Any())
        {
            <div class="external-providers mb-4">
                @foreach (var provider in Model.VisibleExternalProviders)
                {
                    <a class="btn btn-google-premium"
                       asp-action="ExternalLogin"
                       asp-route-provider="@provider.AuthenticationScheme"
                       asp-route-returnUrl="@Model.ReturnUrl">
                        <!-- Colorful Google Icon SVG -->
                        <svg class="google-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                        Continue with @provider.DisplayName
                    </a>
                }
            </div>
            
            @if (Model.EnableLocalLogin)
            {
                <div class="divider-text">OR</div>
            }
        }

        @if (Model.EnableLocalLogin)
        {
            <form asp-route="Login" class="mt-4">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-floating-custom">
                    <input class="form-control" id="usernameInput" placeholder=" " asp-for="Username" autofocus>
                    <label for="usernameInput">@Localizer[LoginPolicyResolutionLocalizer.GetUserNameLocalizationKey(Model.LoginResolutionPolicy)]</label>
                </div>

                <div class="form-floating-custom">
                    <input type="password" class="form-control" id="passwordInput" placeholder=" " asp-for="Password" autocomplete="off">
                    <label for="passwordInput">@Localizer["Password"]</label>
                </div>

                @if (Model.AllowRememberLogin)
                {
                    <div class="form-group d-flex justify-content-between align-items-center mb-4">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberLogin" type="checkbox" class="custom-control-input" id="rememberMe">
                            <label class="custom-control-label text-muted" for="rememberMe">@Localizer["Remember"]</label>
                        </div>
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-sm text-primary" style="font-size: 0.9rem;">@Localizer["Forgot"]</a>
                    </div>
                }

                <button class="btn btn-primary btn-block py-3 font-weight-bold" name="button" value="login" style="width: 100%;">
                    @Localizer["Login"]
                </button>

                @if (RootConfiguration.RegisterConfiguration.Enabled)
                {
                    <div class="text-center mt-4">
                        <span class="text-muted">Don't have an account?</span>
                        <a asp-action="Register" asp-controller="Account" class="text-primary font-weight-bold ml-1">@Localizer["Register"]</a>
                    </div>
                }
            </form>
        }

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning mt-4">
                <strong>@Localizer["InvalidRequest"]</strong>
                @Localizer["NoSchema"]
            </div>
        }
    </div>
</div>