                });

                container.style.transform = originalTransform;

                // ‰∏ãËºâÂúñÁâá
                const link = document.createElement('a');
                link.download = `UC_Capital_ÁµÑÁπîÊû∂Êßã_${formatDate()}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();

                hideExportOverlay();
