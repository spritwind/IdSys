                    </td>
                    <td>
                        <button class="action-btn" onclick="viewDetail('${escapeHtml(item.id)}')" title="æŸ¥çœ‹è©³ç´°">
                            <span class="oi oi-eye"></span>
                        </button>
                    </td>
                `;

                tbody.appendChild(row);
            });
        }

        // æŸ¥çœ‹è©³ç´°ï¼ˆè¡¨æ ¼ï¼‰
        function viewDetail(id) {
            const item = flatData.find(d => d.id === id);
            if (item) {
                showNodeDetail(item);
            }
        }

        // åˆ‡æ›è¦–åœ–
        function switchView(view) {
            currentView = view;

            document.getElementById('btnChartView').classList.toggle('active', view === 'chart');
            document.getElementById('btnTableView').classList.toggle('active', view === 'table');

            document.getElementById('chartView').classList.toggle('hidden', view !== 'chart');
            document.getElementById('tableView').classList.toggle('active', view === 'table');
        }

        // æœå°‹è™•ç†
        function handleSearch(keyword) {
            const lowerKeyword = keyword.toLowerCase().trim();

            // ç§»é™¤æ‰€æœ‰é«˜äº®
            document.querySelectorAll('.org-node.highlight').forEach(n => n.classList.remove('highlight'));

            // çµ„ç¹”åœ–æœå°‹
            if (currentView === 'chart' && lowerKeyword) {
                document.querySelectorAll('.org-node').forEach(node => {
                    const name = (node.dataset.name || '').toLowerCase();
                    const code = (node.dataset.code || '').toLowerCase();

                    if (name.includes(lowerKeyword) || code.includes(lowerKeyword)) {
                        node.classList.add('highlight');
                        // ç¢ºä¿çˆ¶ç¯€é»å±•é–‹
                        let parent = node.parentElement;
                        while (parent) {
                            if (parent.previousElementSibling && parent.previousElementSibling.classList.contains('org-node')) {
                                parent.previousElementSibling.classList.remove('collapsed');
                            }
                            parent = parent.parentElement?.parentElement;
                        }
                        // æ»¾å‹•åˆ°ç¬¬ä¸€å€‹åŒ¹é…é …
                        if (!document.querySelector('.org-node.highlight.scrolled')) {
                            node.classList.add('scrolled');
                            node.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }
                });

                setTimeout(() => {
                    document.querySelectorAll('.org-node.scrolled').forEach(n => n.classList.remove('scrolled'));
                }, 100);
            }

            // è¡¨æ ¼æœå°‹
            const rows = document.querySelectorAll('#tableBody tr');
            rows.forEach(row => {
                const name = row.dataset.name || '';
                const code = row.dataset.code || '';

                if (!lowerKeyword) {
                    row.classList.remove('highlight');
                    row.style.display = '';
                } else {
                    const isMatch = name.includes(lowerKeyword) || code.includes(lowerKeyword);
                    row.classList.toggle('highlight', isMatch);
                    row.style.display = '';
                }
            });
        }

        // é¡¯ç¤º/éš±è—è¼‰å…¥å‹•ç•«
        function showLoading(show) {
            document.getElementById('loadingOverlay').style.display = show ? 'flex' : 'none';
        }

        // é¡¯ç¤ºéŒ¯èª¤
        function showError(message) {
            document.getElementById('orgChartContainer').innerHTML = `
                <div class="empty-state">
                    <div class="icon"><span class="oi oi-warning text-danger"></span></div>
                    <h4>${escapeHtml(message)}</h4>
                    <button class="btn btn-primary mt-3" onclick="loadOrganizationData()">é‡æ–°è¼‰å…¥</button>
                </div>
            `;
        }

        // HTML è·³è„«
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // éµç›¤äº‹ä»¶
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
            // Ctrl/Cmd + åŠ è™Ÿ/æ¸›è™Ÿ ç¸®æ”¾
            if ((e.ctrlKey || e.metaKey) && currentView === 'chart') {
                if (e.key === '=' || e.key === '+') {
                    e.preventDefault();
                    zoomIn();
                } else if (e.key === '-') {
                    e.preventDefault();
                    zoomOut();
                } else if (e.key === '0') {
                    e.preventDefault();
                    resetZoom();
                }
            }
        });
    </script>
