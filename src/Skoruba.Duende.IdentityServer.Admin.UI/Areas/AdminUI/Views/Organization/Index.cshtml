        // ÊêúÂ∞ãËôïÁêÜ
        function handleSearch(keyword) {
            const lowerKeyword = keyword.toLowerCase().trim();

            // ÁßªÈô§ÊâÄÊúâÈ´ò‰∫Æ
            document.querySelectorAll('.org-node.highlight').forEach(n => n.classList.remove('highlight'));

            // ÁµÑÁπîÂúñÊêúÂ∞ã
            if (currentView === 'chart' && lowerKeyword) {
                document.querySelectorAll('.org-node').forEach(node => {
                    const name = (node.dataset.name || '').toLowerCase();
                    const code = (node.dataset.code || '').toLowerCase();

                    if (name.includes(lowerKeyword) || code.includes(lowerKeyword)) {
                        node.classList.add('highlight');
                        // Á¢∫‰øùÁà∂ÁØÄÈªûÂ±ïÈñã
                        let parent = node.parentElement;
                        while (parent) {
                            if (parent.previousElementSibling && parent.previousElementSibling.classList.contains('org-node')) {
                                parent.previousElementSibling.classList.remove('collapsed');
                            }
                            parent = parent.parentElement?.parentElement;
                        }
                        // ÊªæÂãïÂà∞Á¨¨‰∏ÄÂÄãÂåπÈÖçÈ†Ö
                        if (!document.querySelector('.org-node.highlight.scrolled')) {
                            node.classList.add('scrolled');
                            node.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }
                });

                setTimeout(() => {
                    document.querySelectorAll('.org-node.scrolled').forEach(n => n.classList.remove('scrolled'));
                }, 100);
            }

            // Ë°®Ê†ºÊêúÂ∞ã
            const rows = document.querySelectorAll('#tableBody tr');
            rows.forEach(row => {
                const name = row.dataset.name || '';
                const code = row.dataset.code || '';

                if (!lowerKeyword) {
                    row.classList.remove('highlight');
                    row.style.display = '';
                } else {
                    const isMatch = name.includes(lowerKeyword) || code.includes(lowerKeyword);
                    row.classList.toggle('highlight', isMatch);
                    row.style.display = '';
                }
            });
        }

