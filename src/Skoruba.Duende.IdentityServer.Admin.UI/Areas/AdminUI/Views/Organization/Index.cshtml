            }
        }

        async function exportToPDF() {
            showExportOverlay('Ê≠£Âú®ÁîüÊàê PDF Êñá‰ª∂...');

            try {
                // Á¢∫‰øùÂáΩÂºèÂ∫´Â∑≤ËºâÂÖ•
                if (typeof html2canvas === 'undefined') {
                    await loadScript('https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js');
                }
                if (typeof jspdf === 'undefined' && typeof jsPDF === 'undefined') {
                    await loadScript('https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js');
                }

                const container = document.getElementById('orgChartContainer');

                // Êö´ÊôÇË™øÊï¥Ê®£Âºè
                const originalTransform = container.style.transform;
                container.style.transform = 'scale(1)';

                const canvas = await html2canvas(container, {
                    scale: 2,
                    useCORS: true,
                    logging: false,
                    backgroundColor: '#ffffff'
                });

                container.style.transform = originalTransform;

                const imgData = canvas.toDataURL('image/png');
                const imgWidth = canvas.width;
                const imgHeight = canvas.height;

                // ‰ΩøÁî® A4 Ê©´ÂêëÊàñÊ†πÊìöÂúñÁâáÊØî‰æãÈÅ∏Êìá
                const { jsPDF } = window.jspdf;
                const orientation = imgWidth > imgHeight ? 'landscape' : 'portrait';
                const pdf = new jsPDF({
                    orientation: orientation,
                    unit: 'mm',
                    format: 'a4'
                });

                const pageWidth = pdf.internal.pageSize.getWidth();
                const pageHeight = pdf.internal.pageSize.getHeight();

                // Ë®àÁÆóÁ∏ÆÊîæÊØî‰æã
                const ratio = Math.min(pageWidth / imgWidth, pageHeight / imgHeight) * 25.4; // ËΩâÊèõÁÇ∫ mm
                const scaledWidth = imgWidth * ratio / 25.4;
                const scaledHeight = imgHeight * ratio / 25.4;

                // ÁΩÆ‰∏≠
                const x = (pageWidth - scaledWidth) / 2;
                const y = 10;

                // Ê∑ªÂä†Ê®ôÈ°å
                pdf.setFontSize(16);
                pdf.setTextColor(30, 58, 95);
                pdf.text('UC Capital ÁµÑÁπîÊû∂Êßã', pageWidth / 2, 8, { align: 'center' });

                pdf.addImage(imgData, 'PNG', x, y + 5, scaledWidth, scaledHeight);

                // Ê∑ªÂä†È†ÅÂ∞æ
                pdf.setFontSize(8);
                pdf.setTextColor(128, 128, 128);
                pdf.text(`ÂåØÂá∫ÊôÇÈñì: ${new Date().toLocaleString('zh-TW')}`, 10, pageHeight - 5);

                pdf.save(`UC_Capital_ÁµÑÁπîÊû∂Êßã_${formatDate()}.pdf`);

                hideExportOverlay();
            } catch (error) {
                console.error('ÂåØÂá∫ PDF Â§±Êïó:', error);
                hideExportOverlay();
                alert('ÂåØÂá∫ PDF Â§±ÊïóÔºåË´ãÁ®çÂæåÂÜçË©¶');
            }
        }

        function loadScript(src) {
            return new Promise((resolve, reject) => {
                const script = document.createElement('script');
                script.src = src;
                script.onload = resolve;
                script.onerror = reject;
                document.head.appendChild(script);
            });
        }

        function formatDate() {
            const now = new Date();
            return `${now.getFullYear()}${String(now.getMonth() + 1).padStart(2, '0')}${String(now.getDate()).padStart(2, '0')}_${String(now.getHours()).padStart(2, '0')}${String(now.getMinutes()).padStart(2, '0')}`;
