@section scripts {
    <script>
        // ÂÖ®ÂüüËÆäÊï∏
        let treeData = [];
        let flatData = [];
        let currentView = 'chart';
        let currentZoom = 1;
        const ZOOM_STEP = 0.1;
        const ZOOM_MIN = 0.3;
        const ZOOM_MAX = 2;

        // È†ÅÈù¢ËºâÂÖ•
        document.addEventListener('DOMContentLoaded', function() {
            loadOrganizationData();
            initZoomEvents();
        });

        // ÂàùÂßãÂåñÁ∏ÆÊîæ‰∫ã‰ª∂
        function initZoomEvents() {
            const wrapper = document.getElementById('chartWrapper');

            // ÊªëÈº†ÊªæËº™Á∏ÆÊîæ
            wrapper.addEventListener('wheel', function(e) {
                if (e.ctrlKey || e.metaKey) {
                    e.preventDefault();
                    if (e.deltaY < 0) {
                        zoomIn();
                    } else {
                        zoomOut();
                    }
                }
            }, { passive: false });

            // ÊãñÊõ≥Âπ≥Áßª
            let isDragging = false;
            let startX, startY, scrollLeft, scrollTop;

            wrapper.addEventListener('mousedown', function(e) {
                if (e.target.closest('.org-node')) return;
                isDragging = true;
                startX = e.pageX - wrapper.offsetLeft;
                startY = e.pageY - wrapper.offsetTop;
                scrollLeft = wrapper.scrollLeft;
                scrollTop = wrapper.scrollTop;
            });

            wrapper.addEventListener('mouseleave', () => isDragging = false);
            wrapper.addEventListener('mouseup', () => isDragging = false);

            wrapper.addEventListener('mousemove', function(e) {
                if (!isDragging) return;
                e.preventDefault();
                const x = e.pageX - wrapper.offsetLeft;
                const y = e.pageY - wrapper.offsetTop;
                wrapper.scrollLeft = scrollLeft - (x - startX);
                wrapper.scrollTop = scrollTop - (y - startY);
            });
        }

        // Á∏ÆÊîæÂäüËÉΩ
        function zoomIn() {
            if (currentZoom < ZOOM_MAX) {
                currentZoom = Math.min(currentZoom + ZOOM_STEP, ZOOM_MAX);
                applyZoom();
            }
        }

        function zoomOut() {
            if (currentZoom > ZOOM_MIN) {
                currentZoom = Math.max(currentZoom - ZOOM_STEP, ZOOM_MIN);
                applyZoom();
            }
        }

        function resetZoom() {
            currentZoom = 1;
            applyZoom();
        }

        function applyZoom() {
            const container = document.getElementById('orgChartContainer');
            container.style.transform = `scale(${currentZoom})`;
            document.getElementById('zoomLevel').textContent = Math.round(currentZoom * 100) + '%';
        }

        // ËºâÂÖ•ÁµÑÁπîË≥áÊñô
        async function loadOrganizationData() {
            try {
                showLoading(true);

                const [treeResponse, flatResponse] = await Promise.all([
                    fetch('@Url.Action("GetOrganizationTree", "Organization", new { area = CommonConsts.AdminUIArea })'),
                    fetch('@Url.Action("GetAllGroups", "Organization", new { area = CommonConsts.AdminUIArea })')
                ]);

                if (!treeResponse.ok || !flatResponse.ok) {
                    throw new Error('API ÂõûÊáâÈåØË™§');
                }

                treeData = await treeResponse.json();
                flatData = await flatResponse.json();

                // ÈáçÊñ∞ÊéíÂ∫èÔºöCEO ÊîæÊúÄÂâçÈù¢
                sortTreeWithCeoFirst(treeData);
                sortFlatDataWithCeoFirst();

                // Ê∏≤ÊüìÁµÑÁπîÂúñ
                renderOrgChart();

                // Ê∏≤ÊüìË°®Ê†º
                renderTable();

            } catch (error) {
                console.error('ËºâÂÖ•Â§±Êïó:', error);
                showError('ÁÑ°Ê≥ïËºâÂÖ•ÁµÑÁπîÊû∂ÊßãË≥áÊñôÔºåË´ãÁ®çÂæåÂÜçË©¶');
            } finally {
                showLoading(false);
            }
        }

        // ÊéíÂ∫èÔºöCEO ÁΩÆÈ†Ç
        function sortTreeWithCeoFirst(nodes) {
            nodes.sort((a, b) => {
                const aIsCeo = isCeoNode(a);
                const bIsCeo = isCeoNode(b);
                if (aIsCeo && !bIsCeo) return -1;
                if (!aIsCeo && bIsCeo) return 1;
                return (a.name || '').localeCompare(b.name || '');
            });

            nodes.forEach(node => {
                if (node.children && node.children.length > 0) {
                    sortTreeWithCeoFirst(node.children);
                }
            });
        }

        function sortFlatDataWithCeoFirst() {
            flatData.sort((a, b) => {
                // ÂÖàÊåâ depth ÊéíÂ∫è
                if (a.depth !== b.depth) return a.depth - b.depth;
                // ÂêåÂ±§Á¥ö‰∏≠ CEO ÂÑ™ÂÖà
                const aIsCeo = isCeoNode(a);
                const bIsCeo = isCeoNode(b);
                if (aIsCeo && !bIsCeo) return -1;
                if (!aIsCeo && bIsCeo) return 1;
                return (a.name || '').localeCompare(b.name || '');
            });
        }

        // Âà§Êñ∑ÊòØÂê¶ÁÇ∫ CEO ÁØÄÈªû
        function isCeoNode(node) {
            const name = (node.name || '').toLowerCase();
            const code = (node.deptCode || '').toLowerCase();
            const zhName = (node.deptZhName || '').toLowerCase();
            return name.includes('ceo') ||
                   code.includes('ceo') ||
                   zhName.includes('Âü∑Ë°åÈï∑') ||
                   zhName.includes('Á∏ΩË£Å') ||
                   zhName.includes('Ëë£‰∫ãÈï∑') ||
                   name.includes('chief executive');
        }

        // Ê∏≤ÊüìÁµÑÁπîÂúñ
        function renderOrgChart() {
            const container = document.getElementById('orgChartContainer');

            if (treeData.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="icon"><span class="oi oi-inbox"></span></div>
                        <h4>Êö´ÁÑ°ÁµÑÁπîÊû∂ÊßãË≥áÊñô</h4>
                        <p>Ë´ãÂÖàÂú®Ë≥áÊñôÂ∫´‰∏≠Êñ∞Â¢ûÁµÑÁπîË≥áÊñô</p>
                    </div>
                `;
                return;
            }

            const treeHtml = buildTreeHtml(treeData, true);
            container.innerHTML = `<ul class="org-tree">${treeHtml}</ul>`;

            bindTreeEvents();
        }

        // ÈÅûËø¥Âª∫Á´ãÊ®πÁãÄÁµêÊßã HTML
        function buildTreeHtml(nodes, isRoot = false) {
            if (!nodes || nodes.length === 0) return '';

            let html = isRoot ? '' : '<ul>';

            nodes.forEach((node, index) => {
                const hasChildren = node.children && node.children.length > 0;
                const isCeo = isCeoNode(node);
                const isTopLevel = node.depth === 0 || node.depth === 1;

                let nodeClass = '';
                if (isCeo) {
                    nodeClass = 'ceo';
                } else if (isTopLevel && !isCeo) {
                    nodeClass = 'root';
                }

                html += `<li>`;
                html += `<div class="org-node ${nodeClass}" data-id="${escapeHtml(node.id)}" data-name="${escapeHtml(node.name || '')}" data-code="${escapeHtml(node.deptCode || '')}">`;
                html += `<div class="node-title" title="${escapeHtml(node.name)}">${escapeHtml(node.name)}</div>`;

                if (node.deptZhName || node.deptCode) {
                    html += `<div class="node-subtitle" title="${escapeHtml(node.deptZhName || node.deptCode)}">${escapeHtml(node.deptZhName || node.deptCode)}</div>`;
                }

                if (node.manager) {
                    html += `<div class="node-manager"><span class="oi oi-person"></span> ${escapeHtml(node.manager)}</div>`;
                }

                if (hasChildren) {
                    html += `<button class="toggle-btn" onclick="toggleNode(event, this)"></button>`;
                }

                html += `</div>`;

                if (hasChildren) {
                    html += buildTreeHtml(node.children);
                }

                html += `</li>`;
            });

            html += isRoot ? '' : '</ul>';
            return html;
        }

        // Á∂ÅÂÆöÊ®πÁØÄÈªû‰∫ã‰ª∂
        function bindTreeEvents() {
            document.querySelectorAll('.org-node').forEach(node => {
                node.addEventListener('click', function(e) {
                    if (e.target.classList.contains('toggle-btn')) return;
                    const id = this.dataset.id;
                    const item = flatData.find(d => d.id === id);
                    if (item) {
                        showNodeDetail(item);
                    }
                });
            });
        }

        // ÂàáÊèõÁØÄÈªûÂ±ïÈñã/Êî∂Âêà
        function toggleNode(event, btn) {
            event.stopPropagation();
            const node = btn.parentElement;
            node.classList.toggle('collapsed');
        }

        // Â±ïÈñãÂÖ®ÈÉ®
        function expandAll() {
            document.querySelectorAll('.org-node.collapsed').forEach(node => {
                node.classList.remove('collapsed');
            });
        }

        // Êî∂ÂêàÂÖ®ÈÉ®
        function collapseAll() {
            document.querySelectorAll('.org-node .toggle-btn').forEach(btn => {
                btn.parentElement.classList.add('collapsed');
            });
        }

        // È°ØÁ§∫ÁØÄÈªûË©≥Á¥∞Ë≥áË®ä
        function showNodeDetail(item) {
            document.getElementById('modalTitle').textContent = item.name || 'ÈÉ®ÈñÄË©≥Á¥∞Ë≥áË®ä';
            document.getElementById('detailName').textContent = item.name || '-';
            document.getElementById('detailZhName').textContent = item.deptZhName || '-';
            document.getElementById('detailEName').textContent = item.deptEName || '-';
            document.getElementById('detailCode').textContent = item.deptCode || '-';
            document.getElementById('detailPath').textContent = item.path || '-';
            document.getElementById('detailManager').textContent = item.manager || '-';
            document.getElementById('detailDepth').textContent = item.depth !== undefined ? item.depth : '-';
            document.getElementById('detailDesc').textContent = item.description || '-';

            document.getElementById('detailModal').classList.add('active');
        }

        // ÈóúÈñâ Modal
        function closeModal(event) {
            if (!event || event.target.id === 'detailModal') {
                document.getElementById('detailModal').classList.remove('active');
            }
        }

        // Ê∏≤ÊüìË°®Ê†º
        function renderTable() {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';

            if (flatData.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">Êö´ÁÑ°Ë≥áÊñô</td>
                    </tr>
                `;
                return;
            }

            flatData.forEach(item => {
                const depth = item.depth || 0;
                const depthClass = `depth-${Math.min(depth, 4)}`;
                const indent = depth * 20;

                const row = document.createElement('tr');
                row.dataset.id = item.id;
                row.dataset.name = (item.name || '').toLowerCase();
                row.dataset.code = (item.deptCode || '').toLowerCase();

                row.innerHTML = `
                    <td>
                        <span class="depth-badge ${depthClass}">${depth}</span>
                    </td>
                    <td>
                        <div class="dept-name">
                            <span class="indent" style="width: ${indent}px;"></span>
                            <div>
                                <div class="name-text">${escapeHtml(item.name)}${isCeoNode(item) ? ' üëë' : ''}</div>
                                ${item.deptZhName ? `<div class="zh-name">${escapeHtml(item.deptZhName)}</div>` : ''}
                            </div>
                        </div>
                    </td>
                    <td>${item.deptCode ? `<code>${escapeHtml(item.deptCode)}</code>` : '<span class="text-muted">-</span>'}</td>
                    <td><span class="path-text" title="${escapeHtml(item.path)}">${escapeHtml(item.path)}</span></td>
                    <td>
                        ${item.manager
                            ? `<span class="manager-badge"><span class="oi oi-person"></span> ${escapeHtml(item.manager)}</span>`
                            : '<span class="no-manager">Êú™Ë®≠ÂÆö</span>'}
                    </td>
                    <td>
                        <button class="action-btn" onclick="viewDetail('${escapeHtml(item.id)}')" title="Êü•ÁúãË©≥Á¥∞">
                            <span class="oi oi-eye"></span>
                        </button>
                    </td>
                `;

                tbody.appendChild(row);
            });
        }

